<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_help"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="0dp" >

        <ImageView
            android:id="@+id/iv_help_top_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/bg_help" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tv_bg_blackcover1"
            android:background="@drawable/bg_transparent_black" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tv_bg_blackcover2"
            android:background="@drawable/bg_transparent_black" />

        <TextView
            android:id="@+id/tv_help_title"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_marginTop="250dp"
            android:gravity="center"
            android:text="Welcome !"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/tv_help_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_help_title"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/help_content"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_help_slide_lead"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/tv_help_content"
            android:layout_marginTop="125dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/slide_right"
            android:textColor="#FFFFFF"
            android:textSize="26sp" />
    </RelativeLayout>

</LinearLayout>